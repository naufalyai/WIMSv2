<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="#FFFFFF">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_grup"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@drawable/avatar"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/text_view_display_name_grup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Songko"

        android:layout_alignTop="@+id/img_avatar_grup"
        android:layout_toEndOf="@+id/img_avatar_grup" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_display_chat_grup"
        android:textSize="10sp"
        android:layout_below="@+id/text_view_display_name_grup"
        android:layout_toEndOf="@+id/img_avatar_personal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/text_view_display_name_grup"
        android:layout_toEndOf="@+id/text_view_display_name_grup"
        android:layout_alignBottom="@+id/text_view_display_name_grup" />

    <TextView
        android:id="@+id/text_view_time_grup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="time"
        android:layout_alignTop="@+id/img_avatar_grup"
        android:paddingEnd="@dimen/connection_status_padding"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>